{
  "version": "1.0",
  "description": "Database schema for SF Nightlife events",
  "event_schema": {
    "id": {
      "type": "string",
      "description": "Unique identifier (format: category_venueid_dayofweek)"
    },
    "name": {
      "type": "string",
      "description": "Event name"
    },
    "category": {
      "type": "string",
      "enum": ["happy_hour", "trivia", "bingo", "dining", "sports", "other"],
      "description": "Event category"
    },
    "venue": {
      "type": "object",
      "description": "Venue information",
      "properties": {
        "id": {
          "type": "string",
          "description": "Venue ID"
        },
        "name": {
          "type": "string",
          "description": "Venue name"
        },
        "address": {
          "type": "string"
        },
        "neighborhood": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "website": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["bar", "restaurant", "sports_bar", "other"],
          "description": "Type of venue"
        }
      }
    },
    "schedule": {
      "type": "object",
      "description": "When the event occurs",
      "properties": {
        "day_of_week": {
          "type": "string",
          "enum": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
        },
        "start_time": {
          "type": "string",
          "description": "Start time in HH:MM format (24-hour)"
        },
        "end_time": {
          "type": "string",
          "description": "End time in HH:MM format (24-hour)"
        },
        "recurring": {
          "type": "boolean",
          "description": "Whether this is a recurring weekly event"
        },
        "exceptions": {
          "type": "array",
          "description": "Dates when this event doesn't occur (YYYY-MM-DD)"
        }
      }
    },
    "details": {
      "type": "object",
      "description": "Event-specific details",
      "properties": {
        "description": {
          "type": "string"
        },
        "price": {
          "type": "string",
          "description": "Entry fee or price range"
        },
        "specials": {
          "type": "array",
          "description": "Special offers or drink deals"
        },
        "capacity": {
          "type": "number",
          "description": "Venue capacity for this event"
        },
        "age_requirement": {
          "type": "string",
          "enum": ["18+", "21+", "all_ages"],
          "description": "Age restriction"
        },
        "featured": {
          "type": "boolean",
          "description": "Whether this is a featured event of the day"
        }
      }
    },
    "contact": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "instagram": {
          "type": "string"
        }
      }
    },
    "ratings": {
      "type": "object",
      "properties": {
        "google": {
          "type": "number",
          "minimum": 0,
          "maximum": 5
        },
        "yelp": {
          "type": "number",
          "minimum": 0,
          "maximum": 5
        }
      }
    },
    "last_updated": {
      "type": "string",
      "description": "ISO 8601 timestamp of last update"
    }
  },
  "venue_schema": {
    "id": {
      "type": "string",
      "description": "Unique venue identifier"
    },
    "name": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "coordinates": {
      "type": "object",
      "properties": {
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        }
      }
    },
    "neighborhood": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["bar", "restaurant", "sports_bar", "nightclub", "lounge", "other"]
    },
    "hours": {
      "type": "object",
      "description": "Operating hours by day"
    }
  }
}
